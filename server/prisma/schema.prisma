// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  
  character Character?
}

// Enum removed for SQLite compatibility, handled as String in application


model Character {
  id           String      @id @default(uuid())
  userId       String      @unique
  user         User        @relation(fields: [userId], references: [id])
  
  nickname     String
  
  // Stats
  level        Int         @default(1)
  exp          Int         @default(0)
  hp           Int         @default(100)
  maxHp        Int         @default(100)
  energy       Int         @default(100)
  maxEnergy    Int         @default(100)
  
  // Attributes
  strength     Int         @default(5)
  agility      Int         @default(5)
  intuition    Int         @default(5)
  will         Int         @default(5)
  constitution Int         @default(5)
  
  // Info
  faction      String      @default("neutral")
  inventory    String      @default("[]") // JSON string of items
  equipment    String      @default("{}") // JSON string of equipped items { slot: item }
  location     String      @default("{\"city\": \"nova-chimera\", \"isTraveling\": false}") // JSON string of location
  money        Int         @default(0)
  
  dailyShops   DailyShop[]

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model Item {
  id        String   @id @default(uuid())
  name      String
  type      String   // weapon, armor
  levelReq  Int
  stats     String   // JSON string of stats (e.g., {"damage": 10})
  price     Int
  image     String?
}

model DailyShop {
  id          String    @id @default(uuid())
  characterId String
  date        String    // Format: YYYY-MM-DD
  itemIds     String    // JSON string of item IDs array
  
  character   Character @relation(fields: [characterId], references: [id])
  
  @@unique([characterId, date])
}

model Monster {
  id           String   @id @default(uuid())
  name         String
  level        Int
  zoneId       String   // z1, z2, etc.
  
  // Stats
  hp           Int
  maxHp        Int
  strength     Int
  agility      Int
  intuition    Int
  will         Int
  constitution Int
  
  image        String?
  expReward    Int
  moneyReward  Int
}
